@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model OrnekUygulamaMVC.Models.Product

<form asp-action="CreateProduct" asp-controller="Product" method="post">
    <!-- Form içerisindeki input nesleri post edildiğinde bu nesnelere karşılı gelen propertyleri barındıran bir nesneyle otomatik olarak bind edilirler...-->

    <input type="text" asp-for="ProductName" placeholder="Product Name" />
    <br />
    <input type="number" asp-for="Quantity" placeholder="Quantity" />
    <br />
    <button>Ürün Ekle</button>
</form>